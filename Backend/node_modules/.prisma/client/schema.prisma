generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(BUYER)
  avatar   String? // Optional avatar URL

  // Relations
  buyerProjects  Project[] @relation("BuyerProjects")
  sellerProjects Project[] @relation("SellerProjects")
  bids           Bid[]
}

model Project {
  id             Int           @id @default(autoincrement())
  title          String
  description    String
  budgetMin      Int
  budgetMax      Int
  deadline       DateTime
  status         ProjectStatus @default(PENDING)
  deliverableUrl String?
  createdAt      DateTime      @default(now())

  // Relations
  buyer   User @relation("BuyerProjects", fields: [buyerId], references: [id])
  buyerId Int

  seller   User? @relation("SellerProjects", fields: [sellerId], references: [id])
  sellerId Int?

  bids         Bid[]
  deliverables Deliverable[]
}

model Bid {
  id        Int       @id @default(autoincrement())
  amount    Int
  message   String?
  etaDays   Int
  status    BidStatus @default(PENDING)
  createdAt DateTime  @default(now())

  // Relations
  seller   User @relation(fields: [sellerId], references: [id])
  sellerId Int

  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}

model Deliverable {
  id        Int      @id @default(autoincrement())
  fileUrl   String
  createdAt DateTime @default(now())

  // Relations
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
}

enum Role {
  BUYER
  SELLER
  ADMIN // Added admin role for future use
}

enum ProjectStatus {
  DRAFT // For incomplete project listings
  PENDING // Waiting for approval
  OPEN // Accepting bids
  IN_PROGRESS // Work in progress
  COMPLETED // Project finished
  CANCELLED // Project cancelled
}

enum BidStatus {
  PENDING // Default state
  ACCEPTED // Seller accepted this bid
  REJECTED // Seller rejected this bid
  WITHDRAWN // Seller withdrew the bid
}
